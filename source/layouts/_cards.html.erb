
<div class="container">
  <div class="row">
    <h2><center>Recent flats</center></h2>
    <% data.cities.each do |city| %>
      <div class="col-md-4">
        <div class="card" style="background-image: url(<%= city.picture %>);">
          <div class="card-category">
            <h3><%= city.category %></h3>
          </div>
          <div class="card-description">
            <h2><%= city.name.capitalize %></h2>
            <p><%= city.description %></p>
          </div>
          <img class="card-user" src="<%= city.host %>">
          <a class="card-link" href="#" ></a>
        </div>
      </div>
    <% end %>
  </div>
</div>


